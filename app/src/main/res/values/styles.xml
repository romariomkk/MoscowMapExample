<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="toolbarNavigationButtonStyle">@style/CustomToolbarStyle</item>
    </style>

    <style name="CustomToolbarStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="CustomTabHostStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorTabBackground</item>
        <item name="tabSelectedTextColor">@color/colorTabSelectedText</item>
        <item name="tabTextAppearance">@style/CustomTabHostTextStyle</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabHostTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTabUnselectedText</item>
    </style>

    <style name="custom_elev_v21"/>

</resources>
